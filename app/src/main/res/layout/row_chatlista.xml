<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:visibility="gone"
        android:id="@+id/cardview"
        app:cardCornerRadius="10dp"
        android:backgroundTint="@color/gray"
        android:elevation="10dp"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_margin="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_margin="0dp"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/img_user"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:src="@drawable/pik"
                app:civ_border_width="2dp"
                app:civ_border_color="@color/white"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:shadowColor="@color/gray"
                android:shadowRadius="2"
                android:shadowDx="1"
                android:shadowDy="2"
                android:text="Nombre del usuario"
                android:id="@+id/tv_user"
                android:textSize="10dp"
                android:fontFamily="@font/pixelnintendo"
                android:layout_gravity="center"
                android:textColor="@color/white"
                >
            </TextView>

            <ImageView
                android:visibility="gone"
                android:id="@+id/icon_desconectado"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_charmander_icon_icons_com_67576"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </ImageView>
            <TextView
                android:visibility="gone"
                android:id="@+id/tv_desconectado"
                android:layout_gravity="center_vertical"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>
            <ImageView
                android:visibility="gone"
                android:id="@+id/icon_conectado"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_conectado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </ImageView>
            <TextView
                android:text="En linea"
                android:visibility="gone"
                android:id="@+id/tv_conectado"
                android:layout_gravity="center_vertical"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>






        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>